@model IEnumerable<Event>
@{
    ViewData["Title"] = "Upcoming Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2><i class="fas fa-calendar-alt me-2"></i> Upcoming Events</h2>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var e in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(e.ImagePath))
                                {
                                    <img src="@e.ImagePath" class="card-img-top" alt="@e.Title" style="height: 180px; object-fit: cover;">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@e.Title</h5>
                                    <p class="card-text text-muted">
                                        <i class="fas fa-calendar-day me-1"></i>
                                        @e.EventDate.ToString("MMM dd, yyyy")
                                    </p>
                                    <p class="card-text text-truncate">@e.Description</p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-outline-primary">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No upcoming events scheduled. Please check back later!
                </div>
            }
        </div>
    </div>
</div>