@model Event
@{
    ViewData["Title"] = "Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded mb-3" alt="@Model.Title">
                    }
                    <div class="mb-3">
                        <h5><i class="fas fa-calendar-day text-primary me-2"></i>Date & Time</h5>
                        <p>@Model.EventDate.ToString("f")</p>
                    </div>
                    <div class="mb-3">
                        <h5><i class="fas fa-map-marker-alt text-primary me-2"></i>Location</h5>
                        <p>@Model.Location</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5>Event Description</h5>
                    <p class="lead">@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Events
            </a>
        </div>
    </div>
</div>