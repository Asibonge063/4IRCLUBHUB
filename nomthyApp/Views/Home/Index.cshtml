@{
    ViewBag.Title = "4IR Hub Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome To 4IR Hub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4b6cb7;
            --secondary-color: #182848;
            --accent-color: #3a86ff;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --junior-color: #4cc9f0;
            --junior-senior-color: #4895ef;
            --senior-color: #4361ee;
            --head-color: #3a0ca3;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-color);
            line-height: 1.6;
            background-color: #f5f7fa;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 6rem 0 5rem;
            text-align: center;
            position: relative;
            overflow: hidden;
            clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .hero-section .lead {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            font-weight: 300;
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 12px 30px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            letter-spacing: 1px;
            font-size: 0.9rem;
            border: none;
            cursor: pointer;
            margin: 0.5rem;
        }

        .btn-primary {
            background-color: var(--accent-color);
            color: white;
        }

        .btn-outline-light {
            background-color: transparent;
            color: white;
            border: 2px solid white;
        }

        /* Category Cards */
        .category-section {
            padding: 5rem 0;
            background-color: white;
        }

        .category-card {
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.4s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
            border: none;
            color: white;
            text-align: center;
        }

        .junior-card {
            background: linear-gradient(135deg, var(--junior-color), #38a3d1);
        }

        .junior-senior-card {
            background: linear-gradient(135deg, var(--junior-senior-color), #3d7ed6);
        }

        .senior-card {
            background: linear-gradient(135deg, var(--senior-color), #3a56e8);
        }

        .head-card {
            background: linear-gradient(135deg, var(--head-color), #2d0a9e);
        }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .category-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            display: block;
        }

        .category-card h3 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .category-card p {
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .category-card .btn {
            background-color: rgba(255,255,255,0.2);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255,255,255,0.3);
        }

            .category-card .btn:hover {
                background-color: rgba(255,255,255,0.3);
            }

        /* Features Section */
        .features-section {
            padding: 5rem 0;
            background-color: #f5f7fa;
        }

        .feature-box {
            text-align: center;
            padding: 30px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            height: 100%;
            transition: transform 0.3s;
        }

            .feature-box:hover {
                transform: translateY(-5px);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: var(--accent-color);
            margin-bottom: 1.5rem;
        }

        /* Resources Section */
        .resources-section {
            padding: 5rem 0;
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            clip-path: polygon(0 10%, 100% 0, 100% 100%, 0 100%);
            margin-top: -5rem;
            padding-top: 8rem;
        }

        .resource-card {
            background-color: rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255,255,255,0.1);
            transition: transform 0.3s;
        }

            .resource-card:hover {
                transform: translateY(-5px);
                border-color: rgba(255,255,255,0.3);
            }

        .resource-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--accent-color);
        }

        /* Members Section */
        .members-section {
            padding: 5rem 0;
            background-color: white;
        }

        .member-card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s;
            margin-bottom: 30px;
            background: white;
        }

            .member-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            }

        .member-img {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .member-info {
            padding: 20px;
        }

        .member-name {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .member-role {
            color: var(--accent-color);
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .social-links a {
            color: var(--dark-color);
            margin-right: 10px;
            transition: color 0.3s;
        }

            .social-links a:hover {
                color: var(--accent-color);
            }

        /* Newsletter */
        .newsletter-section {
            padding: 5rem 0;
            background-color: var(--light-color);
        }

        .newsletter-form {
            max-width: 600px;
            margin: 0 auto;
        }

        /* Footer */
        .footer {
            background-color: var(--dark-color);
            color: white;
            padding: 4rem 0 0;
        }

        .footer-links a {
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            transition: color 0.3s;
            display: block;
            margin-bottom: 0.5rem;
        }

            .footer-links a:hover {
                color: white;
            }

        .copyright {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 1.5rem;
            margin-top: 3rem;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2.5rem;
            }

            .hero-section .lead {
                font-size: 1.2rem;
            }

            .hero-section {
                clip-path: polygon(0 0, 100% 0, 100% 95%, 0 100%);
                padding: 4rem 0 3rem;
            }

            .resources-section {
                clip-path: polygon(0 5%, 100% 0, 100% 100%, 0 100%);
                padding-top: 6rem;
            }
        }

        /* Animation */
        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-15px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }
    </style>
</head>
