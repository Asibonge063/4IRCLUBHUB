    <script>
        // Animation for elements when they come into view
        $(window).scroll(function() {
            $('.category-card, .feature-box, .resource-card, .member-card').each(function() {
                var cardPosition = $(this).offset().top;
                var scrollPosition = $(window).scrollTop() + $(window).height();

                if (scrollPosition > cardPosition + 100) {
                    $(this).css('opacity', '1').css('transform', 'translateY(0)');
                }
            });
        });

        // Initialize elements as invisible
        $(document).ready(function() {
            $('.category-card, .feature-box, .resource-card, .member-card').css({
                'opacity': '0',
                'transform': 'translateY(30px)',
                'transition': 'all 0.6s ease-out'
            });

            // Trigger scroll once to check initial positions
            $(window).trigger('scroll');
        });
    </script>
